{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/d7b3fbbf-00fd-43ab-a8e6-a3d37ac54a72/v2.0",
          "clientIdSettingName": "AAD_CLIENT_I",
          "clientSecretSettingName": "AAD_CLIENT_SECRE"
        }
      },
      "customOpenIdConnectProviders": {
        "aadb2c": {
          "registration": {
            "clientIdSettingName": "AADB2C_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "AADB2C_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://tamimcustomers.ciamlogin.com/e89cfffb-6bfc-4fc5-966c-9237eab1fd1d/v2.0/.well-known/openid-configuration?appid=91539a1d-69df-4087-a533-691b2a0763fe"
            }
          },
          "login": {
            "scopes": ["openid", "profile", "email"]
          }
        }
      }
    }
  },
  "routes": [
    { "route": "/", "allowedRoles": ["anonymous", "authenticated"] },
    { "route": "/login-employees", "redirect": "/.auth/login/aad", "statusCode": 302 },
    { "route": "/login-customers", "redirect": "/.auth/login/aadb2c", "statusCode": 302 },
    { "route": "/logout", "redirect": "/.auth/logout", "statusCode": 302 },
    { "route": "/dashboard/*", "allowedRoles": ["authenticated"] }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/images/*", "/api/*", "/.auth/*"]
  },
  "responseOverrides": {
    "401": { "statusCode": 302, "redirect": "/login-customers" }
  }
}