{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/d7b3fbbf-00fd-43ab-a8e6-a3d37ac54a72/v2.0",
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        }
      }
    }
  },

  "routes": [
    {
      "route": "/",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/dashboard/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/login",
      "rewrite": "/.auth/login/aad"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout",
      "statusCode": 302
    }
  ],

  "navigationFallback": {
    "rewrite": "/index.html"
  }
}